<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <h3 class="col-8">Update listing</h3>
            <form method="POST" action="/listing/<%= listing._id  %>?_method=PUT" class="form-row col-8">
                <div class="form-group">
                    <label for="title" class="form-label"> Title</label>
                    <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text"
                        id="title" />
                </div>

                <div class="form-group">
                    <label for="descri" class="form-label"> Description</label>
                    <textarea name="listing[description]" id="descri" style="resize: none" class="form-control">
 <%= listing.description %> </textarea>
                </div>

                <div class="form-group">
                    <label for="image" class="form-label"> Image Link</label>
                    <input name="listing[image]" value="<%= listing.image %>" type="text" class="form-control" />
                </div>

                <div class="row">
                    <div class="form-group col-md-4">
                        <label for="price" class="form-label"> Price</label>
                        <input name="listing[price]" value="<%= listing.price %>" type="text" id="price"
                            class="form-control" />
                    </div>

                    <div class="form-group col-md-8">
                        <label for="country" class="form-label"> Country</label>
                        <input name="listing[country]" value="<%= listing.location %>" type="text" id="country"
                            class="form-control" />
                    </div>
                </div>

                <div class="from-group">
                    <label for="location" class="form-label"> Location</label>
                    <input name="listing[location]" value="<%= listing.country %>" type="text" id="location"
                        class="form-control" />
                </div>
                <br />
                <button class="btn btn-dark add-btn">Submit</button>
                <br />
                <br />
            </form>
        </div>
    </body>